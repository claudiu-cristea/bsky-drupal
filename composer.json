{
  "name": "claudiu-cristea/bsky-drupal",
  "type": "library",
  "authors": [
    {
      "name": "Claudiu Cristea",
      "homepage": "https://bsky.app/profile/claudiucristea.ro",
      "role": "Maintainer"
    }
  ],
  "license": "GPL-2.0-or-later",
  "require": {
    "php": ">=8.3",
    "ext-dom": "*",
    "ext-pdo": "*",
    "monolog/monolog": "^3.8",
    "nyholm/psr7": "^1.8",
    "potibm/phluesky": "^0.4.0",
    "symfony/http-client": "^7.2",
    "symfony/yaml": "^7.2"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "php-http/discovery": true
    }
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "slevomat/coding-standard": "^8.15",
    "squizlabs/php_codesniffer": "^3.11",
    "vlucas/phpdotenv": "^5.6"
  },
  "autoload": {
    "psr-4": {
      "BSkyDrupal\\": "src"
    }
  },
  "autoload-dev": {
    "files": [
      "environment.php"
    ]
  }
}
